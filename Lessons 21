/*
    დაწერეთ Method -ი რომელსაც გადასცემთ რაიმე ფრაზას და Method -ი დააბრუნებს ამ ფრაზაში შესული ასოების რაოდენობას.
    input    output
    ABC    |   3
    ABCDEF |   6
*/

{
    static void Main()
    {
            Console.Write("Enter Words: ");
            Words();
    }
    
    static void Words()
    {
        string word = Console.ReadLine();
        Console.Write("Number of words in a sentence: ");      
        int mag = 0 ;
        foreach (var words in word)
        {
            mag++; 
        }
        Console.WriteLine(mag);
    }
}

/*
    დაწერეთ Function რომელიც დათვლის სამი რიცხვიდან რამდენია 10 -ზე მეტი
*/

{ 
    static void Main(string[] args)
    {
        int i = CountNumber(6, 22, 33);
        Console.WriteLine(i);
    }            
    static int CountNumber(int a, int b, int c)
    {
        int count = 0;
        if (a > 10)
        {
            count++;
        }
        if (b > 10)
        {
            count++;
        }
        if (c > 10)
        {
            count++;
        }
        return count;
    }
}
