/*
    დაწერეთ Method -ი რომელსაც გადასცემთ რაიმე ფრაზას და Method -ი დააბრუნებს ამ ფრაზაში შესული ასოების რაოდენობას.
    input    output
    ABC    |   3
    ABCDEF |   6
*/

{
    static void Main()
    {
            Console.Write("Enter Words: ");
            Words();
    }
    
    static void Words()
    {
        string word = Console.ReadLine();
        Console.Write("Number of words in a sentence: ");      
        int mag = 0 ;
        foreach (var words in word)
        {
            mag++; 
        }
        Console.WriteLine(mag);
    }
}
