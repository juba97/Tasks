/*
    მომხმარებელს შემოყავს ციფრების დიაპაზონი მაგ : (1-20)   
     * პროგრამამ უნდა დათვალოს კენტი და ლუწი ციფრების ჯამი  
*/

{
    Console.Write("\tEnter the number : ");      
    int User = int.Parse(Console.ReadLine());
    int count = 0;
    int sumEven = 0;
    int sumOdd = 0; 
    while (count < User)
    {
        count++;
        if (count % 2 == 0)
        {
            Console.WriteLine("Even : " + count);
            sumEven = sumEven + count;              
        }

        if (count % 2 != 0)
        {
            Console.WriteLine("Odd  : " + count);
            sumOdd = sumOdd + count;         
        }
    }
    Console.WriteLine();
    Console.WriteLine("Odd  Sum : " + sumOdd);
    Console.WriteLine("Even Sum : " + sumEven);   
}

/*
    მომხმარებელს შემოყავს რიცხვები, და პროგრამამ უნდა დაადგინოს რამდენი რიცხვია შემოყვანილი
*/

{
    Console.Write("Enter the numbers : ");
    int user = int.Parse(Console.ReadLine());
    int mag = 0;
    while (user > 0)
    {
        mag++;
        user /= 10;
    }
    Console.WriteLine("Magnitude: " + mag);
}

/*
    Switch Case 
*/

{
    int i;
    for (i = 0; i < 10; i++)
        switch (i)
        {
            case 0:
                Console.WriteLine("i is zero");
                break;
            case 1:
                Console.WriteLine("i is one");
                break;
            case 2:
                Console.WriteLine("i is two");
                break;
            case 3:
                Console.WriteLine("i is three");
                break;
            case 4:
                Console.WriteLine("i is four");
                break;
            default:
                Console.WriteLine("i is five or more");
                break;
        }
}
